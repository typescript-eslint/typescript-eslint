{
  "name": "website",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/typescript-eslint/typescript-eslint.git",
    "directory": "packages/website"
  },
  "bugs": {
    "url": "https://github.com/typescript-eslint/typescript-eslint/issues"
  },
  "homepage": "https://typescript-eslint.io",
  "license": "MIT",
  "scripts": {
    "build": "pnpm exec nx build",
    "clear": "docusaurus clear",
    "clean": "rimraf dist/ build/ .docusaurus/ && pnpm run clear",
    "format": "pnpm -w run format",
    "generate-website-dts": "tsx ./tools/generate-website-dts.mts",
    "stylelint": "stylelint \"src/**/*.css\"",
    "stylelint:fix": "stylelint \"src/**/*.css\" --fix",
    "lint": "pnpm -w exec nx lint",
    "serve": "docusaurus serve",
    "start": "pnpm -w run start",
    "swizzle": "docusaurus swizzle",
    "typecheck": "pnpm -w exec nx typecheck"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "@docusaurus/core": "~3.7.0",
    "@docusaurus/faster": "^3.9.2",
    "@docusaurus/plugin-client-redirects": "~3.7.0",
    "@docusaurus/plugin-content-blog": "~3.7.0",
    "@docusaurus/plugin-content-docs": "~3.7.0",
    "@docusaurus/plugin-pwa": "~3.7.0",
    "@docusaurus/preset-classic": "~3.7.0",
    "@docusaurus/remark-plugin-npm2yarn": "~3.7.0",
    "@docusaurus/theme-common": "~3.7.0",
    "@mdx-js/react": "^3.1.0",
    "@typescript-eslint/parser": "workspace:*",
    "@typescript-eslint/website-eslint": "workspace:*",
    "@uiw/react-shields": "2.0.2",
    "clsx": "^2.1.1",
    "docusaurus-plugin-typedoc": "^1.4.2",
    "eslint": "^9.39.2",
    "gray-matter": "^4.0.3",
    "json5": "^2.2.3",
    "konamimojisplosion": "^0.5.2",
    "lz-string": "^1.5.0",
    "prettier": "3.8.0",
    "prism-react-renderer": "^2.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.6",
    "reading-time": "^1.5.0",
    "semver": "^7.7.3",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "catalog:",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@docusaurus/mdx-loader": "^3.9.2",
    "@docusaurus/types": "^3.9.2",
    "@types/history": "^4.7.11",
    "@types/mdast": "^4.0.4",
    "@types/react": "catalog:",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "workspace:*",
    "@typescript-eslint/rule-schema-to-typescript-types": "workspace:*",
    "@typescript-eslint/scope-manager": "workspace:*",
    "@typescript-eslint/types": "workspace:*",
    "@typescript-eslint/typescript-estree": "workspace:*",
    "@typescript-eslint/utils": "workspace:*",
    "history": "^4.10.1",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-mdx": "^3.0.0",
    "monaco-editor": "~0.54.0",
    "prismjs": "1.30.0",
    "raw-loader": "^4.0.2",
    "rimraf": "catalog:",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.1",
    "tsx": "catalog:",
    "unified": "^11.0.5",
    "vfile": "^6.0.3"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nx": {
    "name": "website",
    "includedScripts": [
      "clean"
    ],
    "targets": {
      "build": {
        "command": "docusaurus build",
        "dependsOn": [
          "^build"
        ],
        "options": {
          "cwd": "{projectRoot}"
        },
        "cache": true,
        "outputs": [
          "{projectRoot}/build",
          "{projectRoot}/data"
        ]
      },
      "lint": {
        "command": "eslint",
        "dependsOn": [
          "build"
        ]
      },
      "start": {
        "command": "docusaurus start",
        "dependsOn": [
          "^build"
        ],
        "options": {
          "cwd": "{projectRoot}"
        }
      }
    }
  }
}
