{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/scope-manager",
    "types": ["jest", "node"],
    "noImplicitAny": false
  },
  "exclude": ["tests/fixtures"],
  "include": [
    "tests",
    "tools",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
}
