{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/packages/rule-tester",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals", "vitest/importMeta"]
  },
  "include": [
    "vitest.config.mts",
    "package.json",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "tests",
    "typings"
  ],
  "exclude": ["**/fixtures/**"],
  "references": [
    {
      "path": "./tsconfig.build.json"
    },
    {
      "path": "../../tsconfig.repo-config-files.json"
    }
  ]
}
